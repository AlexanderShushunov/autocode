import { h, FunctionComponent } from 'preact'

import imgAvifSrc from './{{imgName}}.avif'
import imgWebpSrc from './{{imgName}}.webp'
import imgJpegSrc from './{{imgName}}.jpeg'

type Props = {
  alt: string
  className?: string
}

export const {{componentName}}: FunctionComponent<Props> = ({ alt, className }) => (
  <picture>
    <source type="image/avif" srcSet={imgAvifSrc} />
    <source type="image/webp" srcSet={imgWebpSrc} />
    <img class={className} src={imgJpegSrc} alt={alt} />
  </picture>
)
